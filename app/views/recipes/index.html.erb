<h1 style = "font-family: times;
font-size: 30px;">Choose a recipe</h1>


 <div class = "choose">
        <% @category.recipes.each do |recipe| %>
        <tr>
        <br>
        <td><%= link_to recipe.name, category_recipe_path(recipe.category_id, recipe.id) %></td>
        </br>
       <!--  <td><%= recipe.method %></td> -->
        
        <td><%#= link_to 'Show', recipe %></td>
        <td><%#= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%#= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>

</div>

