<html style = "background-image:url('http://www.matthewsheartsofhope.org/images/blankBackground.jpg')";>

    <p id="notice"><%= notice %></p>

    <div class = "name">
          <% @category.recipes.each do |x| %>

          <h2><%= x.name %></h2>
          <h5>Method:</h5>
          <%= x.method %>
          <%end%>
    </div>

    <div id = "image">
          <% @category.recipes.each do |x| %>
          <br><img src = "<%= x.image_url%>"/></br>
          <%end%>
    </div>

    <div class = "ingredient">
        <h3>Ingredients:</h3>
        <% @recipe.ingredients.each do |x| %>
          <table>
             <tr> <%= x.name %> </tr>
          </table>
        <%end%>
    </div>


    </div class = "track">
      <!--   <h3>Recommended Playlist:</h3> -->
        <% @all_tracks_recipe.each do |track| %>
        	
        <br><%= track.sound_cloud_player.html_safe %></br>
    	  <% end %>
    </div>
